rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Transactions: Users can manage their own transactions.
    match /transactions/{transactionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Incomes: Users can manage their own incomes.
    match /incomes/{incomeId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Categories: Users can manage their own categories.
    match /categories/{categoryId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Recurring Payments: Users can manage their own recurring payments.
    match /recurringPayments/{paymentId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Debts (Legacy, if still needed):
    match /debts/{debtId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // FCM Tokens: Users can manage their own device tokens for notifications.
    match /fcmTokens/{token} {
      // Allow users to create and manage their own tokens.
      allow create, read, update, delete: if request.auth != null && 
                                            (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
  }
}
